# Dchat Backend Environment Variables (Python/Flask)

# 应用配置
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
PORT=5000

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///./database/app.db

# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/dchat_db

# CORS配置
# 开发环境允许所有来源
CORS_ORIGINS=*

# 生产环境指定具体域名
# CORS_ORIGINS=https://dchat.pro,https://www.dchat.pro

# JWT配置
JWT_EXPIRATION_DAYS=30
JWT_ALGORITHM=HS256

# IPFS配置
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# 区块链配置
# Ethereum RPC URL (Sepolia测试网)
ETH_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# 智能合约地址
CONTRACT_USER_IDENTITY=0x5FbDB2315678afecb367f032d93F642f64180aa3
CONTRACT_MESSAGE_STORAGE=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
CONTRACT_PAYMENT_ESCROW=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0
CONTRACT_PROJECT_COLLABORATION=0xCf7Ed3AccA5a467e9e704C703E8D87F634fB0Fc9

# LinkedIn OAuth配置
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://dchat.pro/auth/linkedin/callback

# 文件上传配置
MAX_FILE_SIZE_MB=16
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Rate Limiting配置
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE=memory
# 生产环境使用Redis
# RATE_LIMIT_STORAGE=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/dchat.log

# 错误监控（可选）
# SENTRY_DSN=your-sentry-dsn-here

# Email配置（可选，用于通知）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@dchat.pro
