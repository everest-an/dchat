# Dchat Backend Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration (Required)
# Get your credentials from https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration (Required)
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://dchat.pro,https://www.dchat.pro,http://localhost:5173

# Email Service Configuration (Optional - for sending verification codes)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@dchat.pro

# SMS Service Configuration (Optional - for phone verification)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Redis Configuration (Optional - for caching/sessions)
REDIS_URL=

# Pinata/IPFS Configuration (Optional - for file storage)
PINATA_API_KEY=
PINATA_SECRET_KEY=
