# Local Development Environment Variables
SOCKET_HOST=0.0.0.0
SOCKET_PORT=8001
ENVIRONMENT=development

# CORS Configuration - Allow local development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Socket.IO Settings
PING_TIMEOUT=60
PING_INTERVAL=25
MAX_HTTP_BUFFER_SIZE=1000000

# Session Settings
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=DEBUG

# Redis (disabled for local dev)
REDIS_ENABLED=false

# Security (relaxed for local dev)
REQUIRE_AUTH=false
JWT_SECRET=local-dev-secret-key

# Rate Limiting (disabled for local dev)
RATE_LIMIT_ENABLED=false
