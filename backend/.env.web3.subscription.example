# Web3 Subscription System Environment Variables
# Copy these to your .env file

# ==========================================
# Web3 Provider Configuration
# ==========================================
WEB3_PROVIDER_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Alternative providers:
# - Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# - QuickNode: https://YOUR_ENDPOINT.quiknode.pro/YOUR_TOKEN/

# ==========================================
# Smart Contract Addresses (Sepolia Testnet)
# ==========================================
CONTRACT_SUBSCRIPTION_MANAGER=0x5d154C1A6DE2B10aFcCd139A4aBa3bbCfd8A31c8
CONTRACT_NFT_AVATAR_MANAGER=0xF91E0E6afF5A93831F67838539245a44Ca384187

# ==========================================
# Supported Payment Tokens (Sepolia)
# ==========================================
# ETH is supported by default (address(0))
PAYMENT_TOKEN_USDT=0x... # USDT contract address on Sepolia
PAYMENT_TOKEN_USDC=0x... # USDC contract address on Sepolia

# ==========================================
# Redis Configuration (for caching)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
SUBSCRIPTION_CACHE_TTL=300  # Cache subscription status for 5 minutes

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=sqlite:///database/app.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ==========================================
# Flask Configuration
# ==========================================
SECRET_KEY=dchat-secret-key-2024
DEBUG=False
PORT=5000

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=http://localhost:3000,https://dchat.pro

# ==========================================
# API Rate Limiting
# ==========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/subscription.log

# ==========================================
# Feature Limits (can be overridden)
# ==========================================
# FREE tier limits
FREE_GROUP_MEMBERS_LIMIT=100
FREE_FILE_SIZE_LIMIT_MB=100
FREE_CALL_DURATION_LIMIT_MINUTES=60
FREE_STORAGE_LIMIT_GB=5

# PRO tier limits
PRO_GROUP_MEMBERS_LIMIT=500
PRO_FILE_SIZE_LIMIT_MB=1000
PRO_CALL_DURATION_LIMIT_MINUTES=0  # 0 = unlimited
PRO_STORAGE_LIMIT_GB=100
PRO_CUSTOM_STICKERS_LIMIT=50

# ENTERPRISE tier limits (0 = unlimited)
ENTERPRISE_GROUP_MEMBERS_LIMIT=0
ENTERPRISE_FILE_SIZE_LIMIT_MB=10000
ENTERPRISE_CALL_DURATION_LIMIT_MINUTES=0
ENTERPRISE_STORAGE_LIMIT_GB=1000
ENTERPRISE_CUSTOM_STICKERS_LIMIT=0

# ==========================================
# Blockchain Network Configuration
# ==========================================
NETWORK_NAME=sepolia
NETWORK_CHAIN_ID=11155111
NETWORK_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
NETWORK_EXPLORER_URL=https://sepolia.etherscan.io

# For mainnet deployment:
# NETWORK_NAME=mainnet
# NETWORK_CHAIN_ID=1
# NETWORK_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# NETWORK_EXPLORER_URL=https://etherscan.io
